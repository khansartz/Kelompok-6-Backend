  <style>
    .gallery-container {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 20px;
    }

    .gallery-item {
      position: relative;
      overflow: hidden;
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-top: 30px;
    }

    .gallery-item img {
      width: 100%; /*100%*/
      height: 100%; /*auto*/
      transition: transform 0.3s ease-in-out;
    }

    .gallery-item:hover img {
      transform: scale(1.05);
    }

    .gallery-item .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: black(0, 0, 0, 0.5);
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
    }

    .gallery-item:hover .overlay {
      opacity: 1;
    }

    .gallery-item .overlay h3 {
      color: white;
      margin-bottom: 10px;
    }

    .gallery-item .overlay p {
      color: #ddd;
      font-size: 14px;
      text-align: center;
    }
    .quote .layar-dalam {
      max-width: 800px;
      margin: 0 auto;
    }
    .menu ul li a {
      color: black;
      text-decoration: black;
    }

    .isi {
      margin-left:  50px;
      margin-right: 50px;
    }
  </style>
</head>

